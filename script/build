#!/bin/bash

set -euo pipefail
IFS=$'\n\t'
cd "$(cd "$(dirname "${0}")"; pwd)/../"

sync
sleep 1

if tty -s; then
    TTY=1
fi

docker run \
    --volume="$(pwd):/home/code" \
    ${TTY+--interactive} ${TTY+--tty} \
    develhack:latest \
    sh -c "\
    test -f build/c4che/build.config.py || ( ./waf configure $* ) \
        && ./waf -j \$(getconf _NPROCESSORS_ONLN) \
        && sync"
